generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                 String           @id @default(uuid())
  name               String
  email              String           @unique
  passwordHash       String?
  role               Role
  isActive           Boolean          @default(true)
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  otp                String?
  otpExpiresAt       DateTime?
  emailVerified      DateTime?
  auditLogs          AuditLog[]
  onboardedCustomers Customer[]
  employeeProfile    EmployeeProfile?
  activities         LeadActivity[]
  assignedByLeads    LeadAssignment[] @relation("AssignedBy")
  assignedLeads      LeadAssignment[] @relation("AssignedTo")
  documents          LeadDocument[]
  tasks              LeadTask[]
  notifications      Notification[]
  imageUrl           String?
}

model Notification {
  id        String           @id @default(uuid())
  userId    String
  title     String
  message   String?
  type      NotificationType
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
  user      User             @relation(fields: [userId], references: [id])
}

enum NotificationType {
  LEAD_CREATED
  LEAD_ASSIGNED
  LEAD_CONVERTED
  TASK_REMINDER
  SYSTEM
}

model EmployeeProfile {
  id          String   @id @default(uuid())
  userId      String   @unique
  phone       String?
  department  String?
  designation String?
  salary      Float?
  joiningDate DateTime?
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Lead {
  id          String           @id @default(uuid())
  name        String
  email       String?
  phone       String
  message     String?
  source      LeadSource
  data        Json?
  status      LeadStatus       @default(NEW)
  temperature LeadTemperature  @default(COLD)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  customer    Customer?
  activities  LeadActivity[]
  assignments LeadAssignment[]
  documents   LeadDocument[]
  tasks       LeadTask[]
  imageUrl    String?

  @@index([phone])
  @@index([status])
  @@index([temperature])
}

model LeadAssignment {
  id         String   @id @default(uuid())
  leadId     String
  assignedTo String
  assignedBy String
  assignedAt DateTime @default(now())
  admin      User     @relation("AssignedBy", fields: [assignedBy], references: [id])
  employee   User     @relation("AssignedTo", fields: [assignedTo], references: [id], onDelete: Cascade)
  lead       Lead     @relation(fields: [leadId], references: [id])
}

model LeadActivity {
  id        String           @id @default(uuid())
  leadId    String
  userId    String
  type      LeadActivityType
  content   String?
  meta      Json?
  createdAt DateTime         @default(now())
  lead      Lead             @relation(fields: [leadId], references: [id])
  user      User             @relation(fields: [userId], references: [id])

  @@index([leadId])
  @@index([type])
}

model LeadTask {
  id          String     @id @default(uuid())
  leadId      String
  assignedTo  String
  title       String
  description String?
  dueAt       DateTime
  status      TaskStatus @default(PENDING)
  createdAt   DateTime   @default(now())
  completedAt DateTime?
  user        User       @relation(fields: [assignedTo], references: [id])
  lead        Lead       @relation(fields: [leadId], references: [id])
  reminders   Reminder[]
}

model Reminder {
  id       String   @id @default(uuid())
  taskId   String
  remindAt DateTime
  isSent   Boolean  @default(false)
  sent24h  Boolean  @default(false)
  sent1h   Boolean  @default(false)
  sent10m  Boolean  @default(false)
  task     LeadTask @relation(fields: [taskId], references: [id])
}

model LeadDocument {
  id         String       @id @default(uuid())
  leadId     String
  uploadedBy String
  type       DocumentType
  fileName   String
  fileUrl    String
  createdAt  DateTime     @default(now())
  lead       Lead         @relation(fields: [leadId], references: [id])
  user       User         @relation(fields: [uploadedBy], references: [id])
}

model Customer {
  id          String   @id @default(uuid())
  leadId      String?  @unique
  name        String
  email       String?
  phone       String
  onboardedBy String
  createdAt   DateTime @default(now())
  lead        Lead?    @relation(fields: [leadId], references: [id])
  user        User     @relation(fields: [onboardedBy], references: [id])
  imageUrl    String?
  savedAddresses Json?
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String
  action    String
  entity    String
  entityId  String
  metadata  Json?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  MANAGER
  EMPLOYEE
  SALES_REP
  SUPPORT_AGENT
}

enum LeadSource {
  WEBSITE_1
  WEBSITE_2
  WEBSITE_3
  WEBSITE_4
  INTERFX
}

enum LeadStatus {
  NEW
  ASSIGNED
  IN_PROGRESS
  FOLLOW_UP
  CONVERTED
  LOST
}

enum LeadTemperature {
  COLD
  WARM
  HOT
}

enum LeadActivityType {
  NOTE
  CALL
  EMAIL
  WHATSAPP
  STATUS_CHANGE
  TEMPERATURE_CHANGE
  DOCUMENT_UPLOAD
  TASK_CREATED
}

enum TaskStatus {
  PENDING
  COMPLETED
  CANCELLED
}

enum DocumentType {
  QUOTATION
  REQUIREMENT
  ID_PROOF
  OTHER
}

